{
	"manifest_version": 2,
	"name": "ただ君Addon",
	"version": "2.0.0",

	"description": "YNOCの業務をお助け！",

	"icons": {
		"48": "icons/icon48.png"
	},

	"applications": {
		"gecko": {
			"id": "tadakunAddon@sbt.jp",
			"strict_min_version": "56.0"
		}
	},

	"browser_action": {
		"default_icon": {
			"48": "icons/icon48.png"
		},
		"default_title": "ただ君Addon",
		"default_popup": "browser_action/popupDefault.html"
	},


	"permissions": [
		"http://*/*",
		"https://*/*",
		"tabs",
		"contextMenus",
		"storage"
	],

	"background": {
		"scripts": [
			"OSS/encoding.min.js",
			"OSS/jquery-2.1.3.min.js",
			"OSS/LoadStorage.js",
			"background/storageController.js",
			"background/addonInstalled.js",
			"background/addonUpdateCheck.js",
			"background/context_menu.js"
		]
	}
}